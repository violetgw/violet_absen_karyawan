  <section id="kotak">
  <% data_akun_karyawan.forEach(data_akun => { %>
    <div id="<%= data_akun._id %>" class="container mt-5">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5><%= data_akun.nama %></h5>
        </div>
        <div class="card-body">
          <form class="editForm">
            <div class="form-group">
              <label>Nama</label>
              <input type="text" value="<%= data_akun.nama %>" class="form-control" id="name_<%= data_akun._id %>" placeholder="Masukkan Nama">
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" value="<%= data_akun.username %>" class="form-control" id="username_<%= data_akun._id %>" placeholder="Masukkan Nama">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="text" value="<%= data_akun.password %>" class="form-control" id="password_<%= data_akun._id %>" placeholder="Masukkan Nama">
              </div>
              <div class="form-group">
                <label>Divisi</label>
                <input type="text" value="<%= data_akun.divisi %>" class="form-control" id="divisi_<%= data_akun._id %>" placeholder="Masukkan Nama">
              </div>
            <label>Nomor Telepon</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">+62</span>
              </div>
              <input type="number" value="<%= data_akun.nomer_telfon %>" class="form-control" id="phone_<%= data_akun._id %>" placeholder="Masukkan Nomor Telepon">
            </div>
            <label>Nik</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Nik</span>
              </div>
              <input type="number" value="<%= data_akun.nik %>" class="form-control" id="nik_<%= data_akun._id %>" placeholder="Masukkan Nomor Nik">
            </div>
            <div class="form-group">
              <label>Lokasi_kerja</label>
              <select class="form-control" id="role_<%= data_akun._id %>" required>
                <option value="<%= data_akun.lokasi_kerja %>"><%= data_akun.lokasi_kerja %></option>
                <option value="Grand Wisata">Grand Wisata</option>
                <option value="Zamrud">Zamrud</option>
                <option value="Sahsmira">Sahsmira</option>
                <option value="Setu">Setu</option>
                <option value="Mutiara Gading Timur">Mutiara Gading Timur</option>
              </select>
            </div>
            <button type="button" class="btn btn-primary" onclick="updateData('<%= data_akun._id %>')">Save</button>
            <button style="color: aliceblue;" type="button" class="btn btn-danger" onclick="Hapus('<%= data_akun._id %>')">Hapus Akun</button>
            <% if(data_akun.jumlah_login === "1"){ %>
            <button style="color: aliceblue;" type="button" id="reset_login_<%= data_akun._id %>" class="btn btn-warning" onclick="updateData('<%= data_akun._id %>')">Reset Login</button>
          <%}%>
          </form>
        </div>
      </div>
    </div>
  <% }); %>
</section>
