<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirect Menu Detik</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <div class="alert alert-success" role="alert">
      berhasil absen <%=nama%>
    </div>
    <h3>akan berpindah halaman Home pada</h3>
    <h3 id="countdown" class="text-center"> akan berpindah halaman Home pada</h3>
  </div>

  <script>
    const countdownElement = document.getElementById('countdown');
    let countdown = 5; // Waktu dalam detik sebelum mengalihkan halaman
    countdownElement.innerText = countdown;

    const countdownInterval = setInterval(() => {
      countdown--;
      countdownElement.innerText = countdown;

      if (countdown === 0) {
        clearInterval(countdownInterval);
        window.location.href = '/home'; // Ganti dengan URL tujuan halaman
      }
    }, 1000);
  </script>
</body>
</html>