.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

.modal-header {
  padding: 2px 16px;
  background-color: #5cb85c;
  color: white;
}

.modal-body {
  padding: 2px 16px;
  height: 150px;
}

.modal-footer {
  padding: 2px 16px;
  background-color: #5cb85c;
  color: white;
