</head>
<body>

  
<div style="position: absolute;" id="qr-reader"></div>

<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2 id="h2_absen">Ingin Absen?</h2>
    </div>
    <div class="modal-body">
      <p id="p_absen">Lanjutkan jika anda ingin absen</p>
      <center>
      <button id="tombol_absen_ya" style="position: relative; width: 50%;">Iya!</button>
    </center>
    </div>
  </div>


  <script>
    function onScanSuccess(decodedText, decodedResult) {
      const contoh = decodedText;
      if (contoh == "https://me-qr.com/lTNdh2HG") {
        buka_modal("Grand Wisata");
      } else if (contoh == "https://me-qr.com/IiwsApPD") {
        buka_modal("Zamrud");
      } else if (contoh == "https://me-qr.com/sashmira") {
        buka_modal("sahmira");
      } else if (contoh == "https://me-qr.com/blokf") {
        buka_modal("blokf");
      } else if (contoh == "https://me-qr.com/MutiaraGadingTimur") {
        buka_modal("Mutiara Gading Timur");
      }else if (contoh == "https://me-qr.com/setu") {
        buka_modal("Setu");
      }else if (contoh == "https://me-qr.com/konveksi") {
        buka_modal("Konveksi");
      } else {
        alert(`Ini bukan absen Violet!!!! ${decodedText}`);
      }
    }
  
    var html5QrcodeScanner = new Html5QrcodeScanner(
      "qr-reader",
      { fps: 10, qrbox: 250, cameraScanImage: './path/to/camera-scan.gif' }
    );
  
    html5QrcodeScanner.render(onScanSuccess);
  
    function tutup_scan() {
      document.getElementById("qr-reader").style.display = "none";
    }
  



  // untuk modal 


    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");
  
    // Get the modal element
    var modal = document.getElementById("myModal");
  
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // get lokasi
  
    // When the user clicks the button, open the modal 
    function buka_modal(lokasi) {
      document.getElementById("qr-reader").style.display = "none";
      var h2_absen = document.getElementById("h2_absen");
      var p_absen = document.getElementById("p_absen");
      modal.style.display = "block";
      var tombol_absen_ya = document.getElementById("tombol_absen_ya");
      h2_absen.textContent=`Ingin Absen di ${lokasi}?`;
      p_absen.textContent=`pencet ya jika ingin Absen di ${lokasi}`;


      tombol_absen_ya.onclick = function(){
        tombol_absen_ya.style.display="none";
        h2_absen.textContent=`sedang loading`;
        p_absen.textContent=`tunggu sebentar`;
        location =`data_absen_masuk_karyawan?lokasi=${lokasi}`;
      }

    }
  
    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
      document.getElementById("qr-reader").style.display = "block";
    }
  
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
        document.getElementById("qr-reader").style.display = "block";
      }
    }
  </script>
  



</body>
